        <Button Name="BtnHelloMessageBox" Content="Say hello with message box" HorizontalAlignment="Left" Margin="210,52,0,0" VerticalAlignment="Top" Width="190"/>
        <Label Name="LblGreeting" Content="..." HorizontalAlignment="Center" Margin="10,95,0,0" VerticalAlignment="Top" Width="390"/>

    </Grid>
